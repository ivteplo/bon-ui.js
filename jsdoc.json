{
    "plugins": ["plugins/markdown"],
    "source": {
        "exclude": [
            "Sources/BonUI/ViewModifiers/BackgroundModifier.js",
            "Sources/BonUI/ViewModifiers/ZIndexModifier.js",
            "Sources/BonUI/ViewModifiers/ViewVNodeModifier.js",
            "Sources/BonUI/ViewModifiers/TextAlignmentModifier.js",
            "Sources/BonUI/ViewModifiers/SizeModifier.js",
            "Sources/BonUI/ViewModifiers/PositionModifier.js",
            "Sources/BonUI/ViewModifiers/OffsetModifier.js",
            "Sources/BonUI/ViewModifiers/PaddingModifier.js",
            "Sources/BonUI/ViewModifiers/ForegroundColorModifier.js",
            "Sources/BonUI/ViewModifiers/FontModifier.js",
            "Sources/BonUI/ViewModifiers/EventHandlerModifier.js",
            "Sources/BonUI/ViewModifiers/CSSModifier.js",
            
            "Sources/BonUI/Values/Helpers.js"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,

        "better-docs": {
            "name": "Bon UI API docs",
            "title": "Bon UI API Documentation -",
            "hideGenerator": true,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/teplovs/bon-ui"
                }
            ]
        }
    },
    "opts": {
        "template": "node_modules/better-docs",
        "encoding": "utf8",
        "destination": "./Docs/Build",
        "recurse": true
    }
}