{
    "recurseDepth": 20,
    "plugins": [
        "plugins/markdown",
        "node_modules/better-docs/category"
    ],
    "source": {
        "exclude": [
            "Sources/BonUI/Modifiers/BackgroundModifier.js",
            "Sources/BonUI/Modifiers/ZIndexModifier.js",
            "Sources/BonUI/Modifiers/ViewVNodeModifier.js",
            "Sources/BonUI/Modifiers/SizeModifier.js",
            "Sources/BonUI/Modifiers/PositionModifier.js",
            "Sources/BonUI/Modifiers/OffsetModifier.js",
            "Sources/BonUI/Modifiers/PaddingModifier.js",
            "Sources/BonUI/Modifiers/ForegroundColorModifier.js",
            "Sources/BonUI/Modifiers/FontModifier.js",
            "Sources/BonUI/Modifiers/EventHandlerModifier.js",
            "Sources/BonUI/Modifiers/CSSModifier.js",
            
            "Sources/BonUI/Values/Helpers.js",
            "Sources/BonUI/Values/Protocol.js"
        ],
        "includePattern": ".+\\.js(doc|x)?$",
        "excludePattern": "(^|\\/|\\\\)_"
    },
    "sourceType": "module",
    "tags": {
        "allowUnknownTags": true,
        "dictionaries": ["jsdoc", "closure"]
    },
    "templates": {
        "cleverLinks": false,
        "monospaceLinks": false,
        
        "better-docs": {
            "name": "Bon UI API docs",
            "title": "Bon UI API Documentation -",
            "hideGenerator": true,
            "outputSourceFiles": false,
            "navLinks": [
                {
                    "label": "Github",
                    "href": "https://github.com/teplovs/bon-ui"
                }
            ]
        }
    },
    "opts": {
        "template": "node_modules/better-docs",
        "encoding": "utf8",
        "destination": "./Docs/Build",
        "recurse": true
    }
}