{
  "name": "@teplovs/bon-ui",
  "version": "1.0.0-alpha",
  "author": "Teplovs",
  "description": "JavaScript framework for developing powerful web applications",
  "license": "Apache-2.0",
  "type": "module",
  "module": "esm/BonUI.production.js",
  "files": [
    "Build/**"
  ],
  "engine": ">=12",
  "keywords": [
    "Teplovs",
    "UI",
    "Bon UI",
    "UX",
    "User Interface",
    "Web application",
    "Framework",
    "Declarative syntax"
  ],
  "private": false,
  "scripts": {
    "test": "mocha 'Tests/*.js'",
    "lint": "eslint 'Sources/**/*.js' 'Tests/**/*.js'",
    "build": "NODE_ENV=all FORMAT=all node build.js",
    "build:esm": "NODE_ENV=all FORMAT=esm node build.js",
    "build:umd": "NODE_ENV=all FORMAT=umd node build.js",
    "watch:esm": "NODE_ENV=development WATCH=1 FORMAT=esm node build.js",
    "watch:umd": "NODE_ENV=development WATCH=1 FORMAT=umd node build.js",
    "docs": "jsdoc Sources/** --configure jsdoc.json --tutorials Docs/Tutorials --readme Docs/README.md",
    "debug:tests": "echo 'When mocha says that debugger is attached, open chrome://inspect in Google Chrome' && mocha 'Tests/*.js' --inspect-brk"
  },
  "devDependencies": {
    "@babel/core": "^7.10.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.10.4",
    "@rollup/plugin-babel": "^5.1.0",
    "babel-eslint": "^10.1.0",
    "babel-minify": "^0.5.1",
    "babel-preset-minify": "^0.5.1",
    "better-docs": "^2.0.1",
    "chai": "^4.2.0",
    "eslint": "^7.1.0",
    "jsdoc": "^3.6.4",
    "jsdom": "^16.3.0",
    "mocha": "^7.1.1",
    "rollup": "^2.18.2"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/teplovs/bon-ui.git"
  },
  "bugs": {
    "url": "https://github.com/teplovs/bon-ui/issues"
  },
  "homepage": "https://github.com/teplovs/bon-ui#readme"
}
